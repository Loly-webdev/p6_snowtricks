{% extends 'base.html.twig' %}
{% block title %}Nouvelle Trick{% endblock %}
{% form_theme form _self %}
{% block content %}
<div class="container my-5 text-center add-trick"><br>
    <h2 class="mb-5">Ajouter une nouvelle trick</h2>
    <div class="border px-5">
        <div class="add-trick-form mx-2 my-5 text-info font-weight-bold">
            {{ form_start(form, { 'attr': {'class': 'add-trick-form'} }) }}
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.category) }}
            {{ form_row(form.pictures) }}
            {{ form_row(form.videos) }}
        </div>
        <button type="submit" class="mb-4 btn-round-shadow btn btn-success">
            <span class="fas fa-snowboarding"></span>
            Créer la trick
        </button>
        {{ form_end(form) }}
    </div>
    {% endblock %}
    {% block form_row %}
        <div class="mb-3 add-trick-form-row">
            <label class="font-weight-bold text-info">
                {{ form_label(form) }}
            </label>
            {{ form_widget(form) }}
            <div class="add-trick-form-error">
                {{ form_errors(form) }}
            </div>
        </div>
    {% endblock %}
    {% block _trick_pictures_row %}
        <h3 class="mx-auto mt-5 border-bottom border-top w-50">Ajouter des photos</h3>
        {{ form_widget(form) }}
        <button type="button" class="mt-3 btn-round-shadow btn btn-info btn-add-picture" id="add_picture">
            Ajouter une autre photo
        </button>
    {% endblock %}
    {% block _trick_pictures_entry_widget %}
        <div class="mb-3 add-trick-form-entry">
            <label class="font-weight-bold text-info">
                {{ form_label(form.caption) }}
            </label>
            {{ form_widget(form.caption) }}
            <div class="add-trick-form-error">
                {{ form_errors(form.caption) }}
            </div>
        </div>
        <div class="add-trick-form-entry">
            <label class="font-weight-bold text-info">
                {{ form_label(form.file) }}
            </label>
            {{ form_widget(form.file, {
                attr: {
                    'placeholder': 'Selectionner une photo'
                }
            }) }}
            <div class="add-trick-form-error">
                {{ form_errors(form.file) }}
            </div>
        </div>
        <button type="button" class="mt-3 btn-delete-picture btn btn-danger">
            <span class="fas fa-trash-alt"></span>
        </button>
    {% endblock %}
    {% block _trick_videos_row %}
        <h3 class="mx-auto mt-5 border-bottom border-top w-50">Ajouter des vidéos</h3>
        {{ form_widget(form) }}
        <button type="button" class="mt-3 btn-round-shadow btn btn-info btn-add-video" id="add_video">
            Ajouter une autre vidéo
        </button>
    {% endblock %}
    {% block _trick_videos_entry_widget %}
    <div class="mb-3 add-trick-form-entry">
        <label class="font-weight-bold text-info">
            {{ form_label(form.name) }}
        </label>
        {{ form_widget(form.name) }}
        <div class="add-trick-form-error">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="add-trick-form-entry">
        <label class="font-weight-bold text-info">
            {{ form_label(form.url) }}
        </label>
        {{ form_widget(form.url) }}
        <div class="add-trick-form-error">
            {{ form_errors(form.url) }}
        </div>
    </div>
    <button type="button" class="mt-3 btn-delete-video btn btn-danger">
        <span class="fas fa-trash-alt"></span>
    </button>
</div>
{% endblock %}

